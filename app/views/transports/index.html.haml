%h1 Transport list
= link_to 'New transport', new_transport_path
%table.table-striped
  %tr
    %th Title
    %th Number
    %th{:colspan => "3"}
  - @transports.each do |transport|
    %tr
      %td= transport.title
      %td= transport.number
      %td= link_to 'Show', transport_path(transport)
      %td= link_to 'Edit', edit_transport_path(transport)
      %td= link_to 'Destroy', transport_path(transport), |
          method: :delete,                              |
          data: { confirm: 'Are you sure?' }            |
